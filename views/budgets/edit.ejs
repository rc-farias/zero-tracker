<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="card text-center col-6 offset-3">
        <div class="card-header">
            Edit Budget
        </div>

        <div class="card-body">
            <div class="col-6 offset-3">
                <form action="/budgets/<%=budget._id%>?_method=PUT" method="post" novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="name">Budget Name</label>
                        <input class="form-control needs-validation" type="text" name="budget[name]" id="name" value="<%= budget.name %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <label class="form-label" for="netIncome">Net Income ( $ )</label>
                        <input class="form-control needs-validation" type="text" name="budget[netIncome]" id="netIncome" value="<%= budget.netIncome %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <label class="form-label" for="budgetedExpenses">Budgeted Expenses( $ )</label>
                        <input class="form-control needs-validation" type="text" name="budget[budgetedExpenses]" id="budgetedExpenses" value="<%= budget.budgetedExpenses %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <button class="btn btn-success">Edit Budget</button>
                    </div>
                </form>
                <a href="/budgets/<%= budget._id %> ">Cancel</a>
            </div>

        </div>
    </div>
</div>